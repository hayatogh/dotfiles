function! s:FontSizeGet()
	call <SID>FontSizeSet("?")
	for l:_ in range(7)
		call getcharstr()
	endfor
	let l:size = ""
	while 1
		let l:char = getcharstr()
		if l:char ==# "\x7"
			break
		else
			let l:size ..= l:char
		endif
	endwhile
	echo l:size
endfunction
