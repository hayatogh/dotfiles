	function! s:CopyToClip_OSC52(str)
		if a:str ==# ''
			return
		endif
		let l:escaped = shellescape(a:str)
		let l:enc = systemlist('echo -n ' .. l:escaped .. ' | base64 -w0')[0]
		call echoraw("\e]52;c;" .. l:enc .. "\x7")
	endfunction
else
