set vsvimcaret=50
set clipboard=unnamed
set hlsearch
set history=1000
set ignorecase
set iminsert=2
set modelines=3
set mousemodel=extend
set path=.,,include,./include
set scrolloff=3
set shell=pwsh
set smartcase
set visualbell
set virtualedit=block
set nowrapscan

set autoindent
set number
set relativenumber
set fixendofline

map Y y$
nnoremap mm :<C-U>nohlsearch<CR>
nnoremap <Space>o o<Esc>
nnoremap <Space>w :w<CR>
cnoremap <Left> <Space><BS><Left>
cnoremap <Right> <Space><BS><Right>
cnoremap <C-P> <Up>
cnoremap <C-N> <Down>
cnoremap <Up> <C-P>
cnoremap <Down> <C-N>

nnoremap <C-]> :vsc Edit.GoToDefinition<CR>
