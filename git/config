[alias]
	s = status
	ss = status --branch --short --
	a = add
	c = commit
	d = diff
	ds = diff --staged
	dn = !git -P diff --numstat
	dt = !git -P diff --stat
	g = log --graph --all --format=\"%x09%C(cyan bold)%<(19,trunc)%an %C(yellow nobold)%h %Creset%s%C(magenta bold)%d\"
	l = log
	sc = clone --depth 1 --
	scg = !sh -c 'git clone --depth 1 -- git://github.com/$0'
[core]
	autocrlf = false
	safecrlf = false
[fetch]
	prune = true
	pruneTags = true
[init]
	defaultBranch = main
[log]
	follow = true
[merge]
	conflictStyle = diff3
	tool = vimdiff
[mergetool]
	keepBackup = false
[pager]
	diff = less -x9,17
[pull]
	rebase = false
[push]
	followTags = true
