altscreen on
attrcolor b ".I"
caption splitonly '%?%F%{= gW}%:%{= Kk}%?%2n%f%07=%t%='
compacthist on
defencoding utf-8
defflow on
defscrollback 1000
defutf8 on
escape ^j^v
hardstatus alwayslastline '%{=}%m/%d%D %0c %{= .g}%H%{-} %L=%-w%45L>%{= gk}%n* %t%{-}%+w %-20<%=%{= .y}(%l)'
# %L=    only pad until this point. i.e. don't truncate
# %45L>  truncate until this point is on 45% on screen
# %-20<  trancate until this point is -20
# %=     pad to right
ignorecase on
maptimeout 1
msgminwait 0
msgwait 2
shelltitle '$ |'
startup_message off
term 'screen-256color'
termcapinfo xterm 'Co#256:AB=\E[48;5;%dm:AF=\E[38;5;%dm'
vbell on
# copy mode
# Y = yy
# W = yiw
# y = V
# c C rectangle
# a append
# J join
bind e screen
bind ^e screen
bind f windowlist -b
bind s split
bind v split -v
bind h focus left
bind ^h focus left
bind j focus down
bind ^j focus down
bind k focus up
bind ^k focus up
bind l focus right
bind ^l focus right
bind t focus top
bind b focus bottom
bind o only
bind c remove
bind ^c remove
bind C collapse
bind H bumpleft
bind L bumpright
bind ' ' copy
bind ^@ copy
bind \033
bind ] eval 'stuff \033[200~' 'paste .' 'stuff \033[201~'
bind ^] eval 'stuff \033[200~' 'paste .' 'stuff \033[201~'
bind = resize =
bind + resize +2
bind - resize -2
bind > resize -h +2
bind < resize -h -2
bind I login on
bind O login off
bind N eval 'register - "^J:number "' 'process -'
bind T title
bind R exec .!. bash --noprofile -norc -ic 'echo -e \\x03 history -a\; LINES=$LINES COLUMNS=$COLUMNS exec bash -l'
